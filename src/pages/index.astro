---
//@ts-nocheck
// tjekker ikke for notescript fejl s√•
import "../styles/style.css";
import Layout from "../layouts/Layout.astro";
import Menu from "../components/Menu.astro";
import IndexLinks from "../components/IndexLinks.astro";
import IndexEvents from "../components/IndexEvents.astro";
import Event from "../components/Event.astro";
import bluetexture from "../assets/blue_texture.webp";
---

<Layout title="SoundConnects">
  <main class="grid">
    <img src={bluetexture.src} alt="dark blue sand/texture" />
    <Menu />
    <IndexLinks />
    <IndexEvents>
      <Event />
      <Event />
      <Event />
    </IndexEvents>
  </main>
</Layout>

<style>
  img {
    grid-column: 1/2;
    grid-row: 1/2;
    height: 100vh;
    width: 100vw;
    object-fit: cover;
  }
</style>
