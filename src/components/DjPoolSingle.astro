---
const { djname } = Astro.props;
import Placeholder from "../assets/dj-pool-placeholder.png";
---

<div class="grid">
  <img src={Placeholder.src} alt="" />
  <h3>{djname}</h3>
</div>

<style>
  div {
    margin-bottom: 10px;
    width: 120px;
    height: auto;
  }
  img {
    grid-column: 1/2;
    grid-row: 1/2;
    aspect-ratio: 3/4;
    object-fit: cover;
    width: 120px;
    height: auto;
  }
  h3 {
    color: var(--yellow);
    font-size: 25px;
    text-transform: uppercase;
    grid-column: 1/2;
    grid-row: 1/2;
    place-self: end;
    margin-bottom: -7px;
  }
</style>
