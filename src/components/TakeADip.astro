---
import ocean1 from "../assets/ocean1.webp";
import starimg from "../assets/star-img.png";
import djpooldoodle from "../assets/dj-pool-doodle.svg";
import arrow1 from "../assets/arrow1.svg";
---

<section class="grid">
  <img class="ocean" src={ocean1.src} alt="deep blue ocean" />
  <img
    class="star"
    src={starimg.src}
    alt="2 people djing, placed inside star border"
  />
  <div class="grid h1box">
    <h1 class="h11">WANT</h1>
    <h1 class="h12">TO</h1>
    <h1 class="h13">KNOW</h1>
    <h1 class="h14">OUR</h1>
    <h1 class="h15">DJ'S?</h1>
    <div class="grid dipbox">
      <h4>TAKE A DIP</h4>
      <img class="arrow" src={arrow1.src} alt="arrow pointing down" />
      <div class="grid poolbox">
        <a class="gridcenter noline" href="#">DJ POOL</a>
        <img
          class="gridcenter doodle"
          src={djpooldoodle.src}
          alt="yellow doodle"
        />
      </div>
    </div>
  </div>
</section>

<style>
  .ocean {
    width: 100%;
    height: 700px;
    object-fit: cover;
    grid-column: 1/2;
    grid-row: 1/2;
  }
  .star {
    width: auto;
    height: 400px;
    grid-column: 1/2;
    grid-row: 1/2;
    justify-self: center;
    margin-left: 70px;
    margin-top: 70px;
    overflow: hidden;
  }
  h1,
  h4,
  a {
    color: var(--white);
  }
  h1 {
    font-size: 40px;
  }
  a {
    font-family: "Inconsolata", monospace;
    font-weight: 500;
    font-size: 45px;
    grid-column: 1/2;
    grid-row: 1/2;
    z-index: 10;
  }
  a:hover {
    font-weight: 700;
  }
  h4 {
    font-size: 16px;
    font-weight: 400;
    grid-column: 1/2;
    grid-row: 1/2;
  }
  .h1box {
    margin-top: 70px;
    grid-column: 1/2;
    grid-row: 1/2;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 49px 49px 190px 230px;
  }
  .h11 {
    grid-column: 1/2;
    grid-row: 1/2;
  }
  .h12 {
    grid-column: 2/3;
    grid-row: 1/2;
    justify-self: end;
  }
  .h13 {
    grid-column: 1/2;
    grid-row: 2/3;
  }
  .h14 {
    grid-column: 2/3;
    grid-row: 2/3;
    justify-self: end;
  }
  .h15 {
    grid-column: 2/3;
    grid-row: 3/4;
    place-self: end;
  }
  .dipbox {
    width: 220px;
    height: 140px;
    grid-column: 1/3;
    grid-row: 4/5;
    place-self: end;
  }
  .arrow {
    height: 50px;
    width: auto;
    grid-column: 1/2;
    grid-row: 2/3;
    place-self: center;
  }
  .poolbox {
    width: 190px;
    height: auto;
    grid-column: 1/2;
    grid-row: 3/4;
    place-self: end;
  }
  .doodle {
    width: 190px;
    height: auto;
    grid-column: 1/2;
    grid-row: 1/2;
    z-index: 1;
  }
</style>
