---
import readmore from "../assets/read-more.svg";
---

<div class="eventbox grid">
  <div class="readmorebox grid">
    <a class="noline" href="#">READ MORE</a>
    <img class="doodle" src={readmore.src} alt="yellow doodle" />
  </div>
  <div class="contentbox grid">
    <div class="content1">
      <h2>torsdagstechno</h2>
      <p>
        TechnoTorsdag will be once again be taken over and curated by
        SoundConnects
      </p>
    </div>
    <div class="content2 grid gridcenter">
      <h3>30.05.2025</h3>
      <h4>14-18</h4>
      <h4>@ Jolene</h4>
    </div>
  </div>
</div>

<style>
  .eventbox {
    width: 100%;
    height: 100px;
    grid-template-columns: 45px 1fr;
  }
  .readmorebox {
    background-color: var(--white);
    grid-column: 1/2;
    grid-row: 1/2;
  }
  .contentbox {
    background-color: var(--orange);
    grid-column: 2/3;
    grid-row: 1/2;
    grid-template-columns: 72% 28%;
    padding: 5px;
  }
  .content1 {
    grid-column: 1/2;
    grid-row: 1/2;
    place-self: center;
  }
  .content2 {
    grid-column: 2/3;
    grid-row: 1/2;
    text-align: center;
  }
  h2 {
    font-size: 26px;
    text-transform: uppercase;
    padding-bottom: 3px;
  }
  h3 {
    font-size: 16px;
  }
  h4 {
    font-size: 14px;
    font-weight: 400;
  }
  p {
    font-size: 12px;
  }
  a {
    color: var(--black);
    font-family: "Inconsolata", monospace;
    font-weight: 300;
    font-size: 14px;
    grid-column: 1/2;
    grid-row: 1/2;
    place-self: center;
    text-align: center;
    z-index: 10;
  }
  a:hover {
    font-weight: 600;
  }
  .doodle {
    grid-column: 1/2;
    grid-row: 1/2;
    place-self: center;
    z-index: 1;
  }
</style>
